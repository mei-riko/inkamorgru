            section.block-service
                .container
                    .row.no-gutters
                        .col-4.col-sm-12.col-md-12
                            p.block-service__title.h2.mb-md-40 Компетенции компании
                        .col-4.col-sm-12.col-md-6.d-flex
                            .service.service_modal-btn.service_first-child
                                .service__title Сетевая инфраструктура
                                .service__info ?
                        .col-4.col-sm-12.col-md-6.d-flex
